<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.epicodus.gameencyclopedia.MainActivity">

    <TextView
        android:textSize="20sp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn More about GameEncyclopedia"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/textAbout" />


    <!--<EditText-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:maxLines="1"-->
        <!--android:inputType="text"-->
        <!--android:gravity="center"-->
        <!--android:hint="What game would you like to learn about?"-->
        <!--android:layout_marginTop="37dp"-->
        <!--android:layout_below="@+id/textAbout"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:id="@+id/editTextQuery"/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game"
        android:id="@+id/imageViewPoll"
        android:layout_below="@+id/textAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit search"
        android:layout_alignBottom="@+id/imageViewPoll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/savedGameButton"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/buttonQuery"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Gaming Buylist"
        android:id="@+id/savedGameButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>